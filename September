53. Maximum Subarray on leetcode(Using Kadane's algo):
class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n=nums.size();
        int sum=0;
        int curr=nums[0];
        for(int i=0;i<n;i++)
        {
            sum=sum+nums[i];
            if (sum>curr)
            {
                curr = sum;
            }
            if(sum<0)
            {
                sum=0;
            }
        }
        return curr;
    }
};
